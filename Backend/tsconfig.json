{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dest",
    "baseUrl": ".",
    "lib": [
      "es2018",
      "dom",
      "es5",
      "es6"
    ],
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}