{
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dest",
    "baseUrl": ".",
    "lib": [
      "es2020"
    ],
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}